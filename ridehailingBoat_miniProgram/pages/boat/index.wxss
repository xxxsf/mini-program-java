page, .boat-page {
  background: #f7f7f7;
  height: 100%;
}

.map-wrap {
  position: relative;
  width: 100%;
  overflow: hidden;
}
.map {
  width: 100%;
}

.top-bar {
  position: absolute;
  top: 10px;
  left: 16px;
  right: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.city {
  background: rgba(255,255,255,0.95);
  padding: 6px 10px;
  border-radius: 16px;
  font-size: 14px;
}
.city .arrow { margin-left: 6px; color: #888; }
.scan {
  background: rgba(255,255,255,0.95);
  padding: 6px 10px;
  border-radius: 16px;
  font-size: 14px;
}
/* *{
  box-sizing: border-box;
} */
.operation-container {
  position: absolute;
  bottom: -10px;
  left: 0;
  width: 100%;
}

.operation-card {
  background-color: #f5f5f5;
  border: 1px solid red;
  padding: 0 10px;
  width: 100%;
  /* padding-bottom: 20px; */
  width: calc(100% - 10px);
  /* display: flex; */
}

.quick-tabs {
  display: flex;
  /* background: rgba(255,255,255,0.95); */
  border-radius: 12px;
  overflow: hidden;
  margin-left: 10px;
}
.tab {
  /* flex: 1; */
  width: 120px;
  text-align: center;
  padding: 10px 0;
  font-size: 14px;
  color: #666;
  background-color: #EFEFEF;
}
.tab-on { 
  color: #222; 
  font-weight: 600; 
  background-color: #fff;
  padding: 10px 0;
}

.dest-card {
  /* position: absolute; */
  top: 110px;
  left: 16px;
  right: 16px;
  background: rgba(255,255,255,0.95);
  border-radius: 12px;
  padding: 12px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.08);
}
.dest-card .row {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}
.dest-card .row:last-child { margin-bottom: 0; }
.dot { width: 8px; height: 8px; border-radius: 50%; margin-right: 8px; }
.green { background: #3cc65e; }
.orange { background: #ff9800; }
.input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 8px;
  padding: 8px 10px;
  font-size: 14px;
}

.feature-grid {
  margin: 14px 12px 0 12px;
  background: #fff;
  border-radius: 12px;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  padding: 10px 6px;
}
.feature {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8px 0;
}
.feat-icon { 
  width: 20px; 
  height: 20px; 
}
.feat-text { margin-top: 6px; font-size: 12px; color: #333; }

.banner { margin: 10px 12px 16px; border-radius: 12px; overflow: hidden; }
.banner image { width: 100%; height: 80px; display: block; }

/* 重新定位按钮 */
.locate-btn {
  position: absolute;
  right: 16px;
  bottom: 90px;
  background: rgba(255,255,255,0.95);
  border-radius: 20px;
  padding: 8px 12px;
  font-size: 14px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.12);
}