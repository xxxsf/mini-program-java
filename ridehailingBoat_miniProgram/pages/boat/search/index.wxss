/* 搜索页样式 */
.search-page { padding: 12px; }
.search-bar { display: flex; gap: 8px; align-items: center; }
.search-input { flex: 1; height: 40px; border: 1px solid #eee; border-radius: 8px; padding: 0 10px; background: #fff; }
.map-btn { background: #f4de3b; color: #222; border-radius: 8px; }

.section { margin-top: 14px; background: #fff; border-radius: 10px; overflow: hidden; }
.section-head { display: flex; justify-content: space-between; padding: 12px; color: #666; }
.clear { color: #1f6feb; }
.shortcuts .cell { display: flex; align-items: center; padding: 12px; border-top: 1px solid #f2f2f2; }
.icon { margin-right: 8px; }

.list .cell { display: flex; align-items: center; padding: 12px; border-bottom: 1px solid #f2f2f2; background: #fff; }
.info { flex: 1; }
.name { font-size: 16px; color: #333; }
.addr { font-size: 12px; color: #888; margin-top: 4px; }
.distance { color: #999; font-size: 12px; }

.empty { text-align: center; color: #999; padding: 18px; }