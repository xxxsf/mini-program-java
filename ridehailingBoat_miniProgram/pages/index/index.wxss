.boat-page{background:#f7f8fa;min-height:100vh}
.map-wrap{position:relative}
.map{width:100%;height:320px}
.top-bar{position:absolute;top:10px;left:10px;right:10px;display:flex;justify-content:space-between;align-items:center}
.city{background:#fff;border-radius:16px;padding:6px 10px;box-shadow:0 2px 8px rgba(0,0,0,0.08);font-size:14px}
.city .arrow{margin-left:4px;color:#888}
.scan{background:#fff;border-radius:16px;padding:6px 10px;box-shadow:0 2px 8px rgba(0,0,0,0.08);font-size:14px}
.quick-tabs{position:absolute;top:260px;left:10px;right:10px;display:flex}
.tab{flex:1;background:#fff;color:#333;text-align:center;padding:10px 0;border-radius:10px;margin-right:8px;box-shadow:0 2px 8px rgba(0,0,0,0.08)}
.tab:last-child{margin-right:0}
.tab-on{background:#ffe66d}
.dest-card{position:absolute;top:300px;left:10px;right:10px;background:#fff;border-radius:12px;box-shadow:0 6px 20px rgba(55,55,55,0.15);padding:14px}
.row{display:flex;align-items:center;margin-bottom:10px}
.row:last-child{margin-bottom:0}
.dot{width:8px;height:8px;border-radius:50%;margin-right:8px}
.dot.green{background:#27ae60}
.dot.orange{background:#f39c12}
.input{flex:1;border:0;background:transparent;font-size:15px}
.feature-grid{display:flex;justify-content:space-around;margin:20px 10px}
.feature{display:flex;flex-direction:column;align-items:center}
.feat-icon{width:36px;height:36px;margin-bottom:6px}
.feat-text{font-size:12px;color:#333}
.banner{margin:0 10px}
.banner image{width:100%;height:110px;border-radius:10px}